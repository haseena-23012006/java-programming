import java.util.Scanner;

public class Sample{
    public static void main(String[] args){
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        if(n < 100){
            System.out.println("Invalid Input");
        }else{
            int sum=0;
            int num=n;
            while(num != 0) {
                sum+=num % 10;
                num=num/10;
            }
            System.out.println("Sum of digit is " + sum);
        }
    }
}
