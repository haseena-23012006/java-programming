import java.util.Scanner;
public class Mean {
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);  
        int size=sc.nextInt();
        int[] a=new int[size];
        int sum=0;
        for (int i=0;i<size;i++) {
            a[i]=sc.nextInt();
            sum+=a[i];
        }
        double mean =(float)sum/size;
        System.out.printf("Array Mean Value is %.2f\n", mean);
    }
}
